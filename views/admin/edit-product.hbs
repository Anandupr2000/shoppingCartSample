<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit Product</h2>
                {{!-- enctype="multipart/form-data" is specified for files entry and without it files will not upload --}}
                {{#if updated}}
                    <p>{{product}} updated</p>
                {{/if}}
                <form action="/admin/edit-product" method="post" enctype="multipart/form-data">
                {{!-- for storing id as hidden value --}}
                    <input type="hidden" name="_id" value="{{product._id}}">

                    <label for="">Name</label>
                    <input type="text" name="Name" id="" class="form-control" value="{{product.Name}}">
                    
                    <label for="">Category</label>
                    <input type="text" name="Category" id="" class="form-control" value="{{product.Category}}">
                    
                    <label for="">Price</label>
                    <input type="text" name="Price" id="" class="form-control" value="{{product.Price}}">
                    
                    <label for="">Description</label>
                    <input type="text" name="Description" id="" class="form-control" value="{{product.Description}}">
                    
                    <label for="" >Image</label>
                    <img src="/product_images/{{product._id}}.jpg" alt="" height="100" id="productImg" class="mt-2 mb-2">
                    <input type="file" name="Image" id="" class="form-control" onchange="changeImg(event)">
                    
                    <input type="submit" value="Update" class="btn btn-success mt-4">
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    function changeImg(event){
        document.getElementById("productImg").src = URL.createObjectURL(event.target.files[0]); 
    }
</script>