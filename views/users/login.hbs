<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container">
            <h2 class="text-center">Login</h2>
            <form class="form mt-5" action="/login" method="post">
                {{#if logInErr}} {{!if error is produced then write}}
                    {{logInErr}}
                {{/if}}
                <div class="form-group mt-5">
                    <label for="" class="form-label">Email address</label>
                    <input type="email" class="form-control mt-2" name="email" id="" placeholder="Enter email">
                </div>
                <div class="form-group mt-3 mb-5">
                    <label for="" class="form-label">Password</label>
                    <input type="password" class="form-control mt-2" name="password" id="" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary">Login</button> 
                <a class="ms-3" href="/signup">Create a new account ?</a>
            </form>
            <button type="submit" onclick="defaultLogin()" id="loginTestBtn" class="mt-3 btn btn-primary">Default Login</button> (Testing)
        </div>
    </div>
</div>