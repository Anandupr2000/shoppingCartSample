<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container">
            <h2 class="text-center">Create new account</h2>
            <form action="/signup" method="post">
                <div class="form-group mb-3">
                    <label for="" class="form-label">Enter name </label>
                    <input class="form-control" type ="text" name="uname" id="" placeholder="Enter name">
                </div>
                <div class="form-group mb-3">
                    <label for=""class="form-label">Email address </label>
                    <input class="form-control" type="email" name="email" id="" placeholder="Enter email">
                </div>
                <div class="form-group mb-3">
                    <label for="" class="form-label">Password </label>
                    <input class="form-control" type="password" name="password" id="" placeholder="Password">
                </div>
                <div class="form-group mb-3">
                    <label for="" class="form-label">Conform Password </label>
                    <input class="form-control" type="password" name="cpassword" id="" placeholder="Password">
                </div>

                <button type="submit" class="btn btn-primary me-3">Sign up</button> 
                <a href="/login">Already have a account ?</a>
            </form>
        </div>
    </div>
</div>