<section>
    <div class="container mt-5 ms-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 mb-5">
                <div class="card p-1" style="width: 18rem;">
                    <img src="/product_images/{{this._id}}.jpg" style="height:16rem"
                        class="card-img-top" alt="...">
                    <div class="card-body">
                        
                        <h5 class="card-title">
                            <span style="float: right;"><i class="fas fa-rupee-sign"></i> {{this.Price}}</span>
                            {{this.Name}}
                        </h5>
                        <p class="card-text">{{this.Description}}</p>
                        <a href="#" class="btn btn-primary">Buy Now</a>
                        {{!-- using ajax to add items to cart --}}
                        {{!-- <a href="/add-to-cart/{{this._id}}" class="btn ">Add to Cart</a> --}}
                        <button class="btn" onclick="addToCart('{{this._id}}')">Add to Cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
